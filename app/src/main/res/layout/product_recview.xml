<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/pdct_Img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tourism"
            />
        <TextView
            android:id="@+id/pdct_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/star_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_star_24"/>
            <TextView
                android:id="@+id/pdct_rate_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/star_sign"
                android:text="4.5/10"
                android:textColor="#3A3A3A"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/pdct_price_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 tk"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@color/greenish_blue"/>
        </RelativeLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>